---
interface Props {
  /**
   * タイトル
   */
  title: string;
  /**
   * 文字色
   */
  color?: string;
}
const { title, color = 'white' } = Astro.props;
---

<div class="flex flex-col md:flex-row md:gap-4 my-1 md:my-4">
  <dt class={`font-bold w-24 text-black dark:text-white before:content-['#'] before:pr-1 ${color}`}>
    {title}
  </dt>
  {
    /* **********
  TIPS: 子要素は<slot />で書ける
  ***************/
  }
  <dd class="flex-1 text-black dark:text-white mt-1 md:mt-0 overflow-hidden"><slot /></dd>
</div>
