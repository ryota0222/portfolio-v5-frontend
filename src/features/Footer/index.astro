---
import { Spacer } from '@/components/system/Spacer';

import Nav from './components/Nav.astro';
import { SnsLink } from './components/SnsLink';
---

<footer class="p-8 flex items-end md:items-center flex-col md:flex-row">
  <div
    class="flex mb-4 md:mb-0 pb-4 md:pb-0 items-center w-full justify-between md:justify-start border-b md:border-b-0 border-zinc-400"
  >
    <span class="text-zinc-500 dark:text-zinc-400 mr-12">&copy;RyoTa.</span>
    <div>
      <img
        src="/images/vision.svg"
        width={200}
        height={24}
        alt="良い体験を、デザインし、作る"
        class="brightness-0 dark:brightness-100"
        loading="lazy"
      />
      <div class="md:block hidden mt-4"><Nav /></div>
    </div>
  </div>
  <div class="md:hidden flex w-full"><Nav /></div>
  <Spacer />
  <SnsLink client:load />
</footer>
