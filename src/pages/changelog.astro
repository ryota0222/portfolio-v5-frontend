---
import { Changelogs } from '@/features/Changelogs';
import Layout from '@/layouts/Layout.astro';
---

<Layout url={`${import.meta.env.SITE}/changelog`} title="Changelogs">
  <div class="container mx-auto max-w-3xl px-4 my-24">
    <h2 class="text-center text-3xl md:text-4xl font-bold color-black dark:text-white mb-16 mt-32 font-rokkitt">
      Changelogs
    </h2>
    <div class="flex flex-col gap-4 w-full">
      <Changelogs client:load />
    </div>
  </div>
</Layout>
