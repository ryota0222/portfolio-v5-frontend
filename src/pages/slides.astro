---
import EmbedBaseLinkCard from '@/components/ui/EmbedBaseLinkCard/index.astro';

import { BreadCrumbs } from '@/features/BreadCrumbs';
import { SLIDE_LIST } from '@/features/EngineerIntroduction/constants';

import Layout from '@/layouts/Layout.astro';
---

<Layout url={`${import.meta.env.SITE}/slides`} title="登壇資料">
  <div class="container mx-auto max-w-3xl px-4 my-24">
    <BreadCrumbs
      list={[
        {
          label: 'Slides',
          path: '/slides',
        },
      ]}
    />
    <h2 class="text-center text-3xl md:text-4xl font-bold color-black dark:text-white mb-16 mt-16 font-rokkitt">
      Slides
    </h2>
    <div class="flex flex-col gap-4 w-full">
      {SLIDE_LIST.map((slide) => <EmbedBaseLinkCard {...slide} />)}
    </div>
  </div>
</Layout>
